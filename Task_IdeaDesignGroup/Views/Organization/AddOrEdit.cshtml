@model OrganizationModel

<div class="row justify-content-sm-center">
    <div class="col-md-6">
        <form asp-action="AddOrEdit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrganizationName" class="col-form-label"></label>
                <input asp-for="OrganizationName" class="form-control" autocomplete="off" />
                <span asp-validation-for="OrganizationName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="col-form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Activity" class="col-form-label"></label>
                <input asp-for="Activity" class="form-control" autocomplete="off" />
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>